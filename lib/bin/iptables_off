#!/bin/bash

set -eu

if [ -v SCREEN ] ; then
    P=$(( 5900 + $SCREEN ))

    for I in $(ls /sys/class/net) ; do
        if [ "$I" = "lo" ] ; then continue ; fi
        iptables -t nat -D PREROUTING -i $I -p tcp --dport $P -j DNAT --to-destination 0.0.0.0:$P
    done
fi

if [ -v MQTT ] ; then
    iptables -t nat -D OUTPUT -o lo -p tcp -m owner --uid-owner $UID -m tcp --dport 1883 -j DNAT --to-destination 0.0.0.0:$MQTT
fi

if [ -v MQTTWS ] ; then
    iptables -t nat -D OUTPUT -o lo -p tcp -m owner --uid-owner $UID -m tcp --dport 9001 -j DNAT --to-destination 0.0.0.0:$MQTTWS
fi
