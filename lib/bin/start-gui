#!/bin/sh
exec 2>&1

echo "*** Starting gui ***"

if [ "$FB" = "y" ] ; then
	# XXX untested and not preconfigured
	export QT_QPA_PLATFORM=linuxfb:
        export QT_PLUGIN_PATH=/v/u/lib/plugins
	opts=-mouse
else
	size=720x480
	export QT_QPA_PLATFORM=vnc:size=$size:addr=127.0.0.1:port=$(expr 5900 + $SCREEN)
        export QT_PLUGIN_PATH=/usr/lib/venusian/opt/gui/gfxdrivers
	opts="-display VNC:size=$size:depth=32:passwordFile=/data/conf/vncpassword.txt:$SCREEN"
fi

exec /opt/victronenergy/gui/gui $opts

